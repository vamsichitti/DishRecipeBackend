package com.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.entity.Recipe;
import com.exception.RecipeNotFoundException;
import com.repository.RecipeRepository;
import com.services.RecipeService;
import java.util.Optional;


@RestController
public class RecipeController {
	
	@Autowired
	RecipeRepository repo;
	
	@Autowired
	RecipeService service;
	
	@PostMapping("/saverecipe")
	public ResponseEntity<?> createRecipe(@RequestBody Recipe recipe) throws RecipeNotFoundException {
	     
		Optional<Recipe> opt = repo.findById(recipe.getRecipieId());
		if(opt.isPresent()) {
			throw new RecipeNotFoundException("recipe already created");
		}
		else {
			service.add(recipe);
			return new ResponseEntity<>("recipe sucessfully created",HttpStatus.CREATED);
		}
	}
	
	@GetMapping("/recipeList")
	public ResponseEntity<?> getAllRecipes() throws RecipeNotFoundException{
		if(!repo.findAll().isEmpty()) {
			return new ResponseEntity<>(service.getAllRecipes(),HttpStatus.OK);
		}
		else {
			throw new RecipeNotFoundException("List is Empty");
		}
	}

}
